@model IEnumerable<SchoolApp.Models.UserGroup>

@foreach (var userGroup in Model)
{
        <div class="d-flex justify-content-between">
            <form method="post" action="/Groups/KickUser/@userGroup.UserGroupId" style="display: flex; align-times: center; justify-content: center">
                <button class="btn btn-outline-danger mx-2" type="submit"><i class="bi bi-trash"></i> Kick </button>
            </form>
            <div style="display: block; margin: auto">
            @userGroup.User.UserName
            </div>
        </div>
}