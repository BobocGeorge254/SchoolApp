@model IEnumerable<SchoolApp.Models.Group>

 <style>

.grid-container {
  display: flex ;
  
  padding : 1em; 
  justify-content: space-between;
}
.grid-item {
    display: flex ;
    flex-direction: column ;
    justify-content: center ;
 
}
.card {
        background-color: #ebfaeb;
        border-radius: 5px;
        box-shadow: 2px 2px 5px 1px #bababa;
}
</style>

<div class="grid-container">
@foreach(var group in Model) {
    
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title" style="text-align: center">@group.GroupName</h5>
                 <div class="grid-item">
             <a class="btn btn-outline-success mx-2" href="/Groups/Edit/@group.GroupId"><i class="bi bi-eye"></i>Editeaza</a>
        </div>
         
        <div class="grid-item">
            <a class="btn btn-outline-success mx-2" asp-action="ShowGroup" asp-controller="Groups" asp-route-id="@group.GroupId"><i class="bi bi-eye"></i>Go to Group</a>
        </div>
                <form method="post" action="/Groups/Delete/@group.GroupId" class="grid-item">
                    <button class="btn btn-outline-danger mx-2" type="submit"><i class="bi bi-trash"></i> Sterge </button>
                </form>
             </div>
         </div>
}
</div> 